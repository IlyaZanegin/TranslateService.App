{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@components": [
        "app/components"
      ],
      "@services": [
        "app/services"
      ],
      "@models": [
        "app/models"
      ],
      "@modules": [
        "app/modules"
      ],
      "@pages": [
        "app/pages"
      ],
      "@config/url": [
        "app/url.config"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
